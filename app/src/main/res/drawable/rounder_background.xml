<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền của LinearLayout (Có thể bỏ nếu không cần màu nền) -->
    <solid android:color="?attr/cardBackgroundColor" />

    <!-- Viền (Border) xung quanh -->
    <stroke
        android:width="1dp"
        android:color="?attr/dividerColor" />

    <!-- Bo góc cho LinearLayout -->
    <corners android:radius="15dp" /> <!-- Bo góc với bán kính 15dp -->

    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
</shape>
